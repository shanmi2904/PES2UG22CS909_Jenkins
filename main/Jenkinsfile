pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    echo "Building project for PES2UG22CS909"
                    sh 'g++ hello.cpp -o PES2UG22CS909.out'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    echo "Running test for PES2UG22CS909"
                    sh './PES2UG22CS909.out'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo "Deploying project for PES2UG22CS909"
                }
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed for PES2UG22CS909'
        }
    }
}

